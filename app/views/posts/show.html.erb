<div class="container">
    <div class="row">
        <div class="col-md-12">
          <h2><%= @post.title %></h2>
            <h4>&emsp;<i>by <%= link_to @author.name, user_path(@author.id) %></i></h4>
            <p><%= @post.body %></p>
            <% if current_user%>
            <%= link_to "Profile", user_path(current_user), class: "btn btn-primary" %>
            <%end%>
            <%= link_to "Home", '/', class: "btn btn-primary" %>
        </div>
    </div>
</div>
