<<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <br>
        <div class="text-center">
          <h1>Edit Post</h1>
        </div>
        <br>
      </div>
      <%= form_for :post, url: user_post_path(@post), method: :patch do |f| %>
          <fieldset class="form-group">
            <label for="name">Title</label>
            <%= f.text_field :title, class: "form-control", placeholder: @post.title %>
          </fieldset>
          <fieldset class="form-group">
            <label for="email">Message</label>
            <%= f.text_area :body, class: "form-control", placeholder: @post.body %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.hidden_field :user_id, class: "form-control", :value => @post.user_id %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.hidden_field :city_id, class: "form-control", :value => @post.city_id %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>
