
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="text-center">
          <h1>Edit Form</h1>
        </div>
      </div>
      <%= form_for @user do |f| %>
        <form>
            <fieldset class="form-group">
              <label for="current_city">Current City</label>
              <%= f.text_field :current_city, class: "form-control", placeholder: "Current City" %>
            </fieldset>

            <fieldset class="form-group">
              <label for="profile_image">Profile Image URL</label>
              <%= f.text_field :profile_image, class: "form-control", placeholder: "Profile Image URL" %>
            </fieldset>
            <fieldset class="form-group">
              <%= f.submit "Save", class: "btn btn-primary" %>
            </fieldset>
          </form>
      <% end %>
    </div>
  </div>
</div>
