

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="text-center">
          <h1>Signup!</h1>
        </div>
      </div>
      <%= form_for :user, url: '/users' do |f| %>
        <form>
          <fieldset class="form-group">
            <label for="name">Name</label>
            <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="emial">Email</label>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="profile_image">Profile Image URL</label>
            <%= f.text_field :profile_image, class: "form-control", placeholder: "Profile Image URL" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="password">Password</label>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="password_confirmation">Password Confirmation</label>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </fieldset>
        </form>
      <% end %>
    </div>
  </div>
</div>
